<h1>
  <%= @wiki.title %> <br>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
</div>
  <div class="col-md-4">
  <% if user_is_authorized_to_edit_wikis %>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
  <% end %>
    <%= link_to "Delete Post", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Do you want to delete this wiki?' } %>
  </div>
